<% if(desc.includes("thunderstorm")) { %>
<body data-bs-theme="dark" class="montserrat-font">
<% } else if(desc.includes("cloud") || desc.includes("drizzle") || desc.includes("overcast")){ %>
    <body style="background-color: #b8b6b4;" class="montserrat-font">
<% } else if(desc.includes("clear")) { %>
    <body style="background-color:#78d9ec" class="montserrat-font">
<% } else { %>
    <body data-bs-theme="light" class="montserrat-font">
<% } %>